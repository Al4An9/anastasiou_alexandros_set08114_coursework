<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.ac.napier.ultimatefitnesstool.Activities.MainHomeActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutCompatBmi">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonLooseWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="@string/loose_weight"
            android:textSize="22sp"
            android:padding="20dp"
            android:layout_marginTop="30dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonGainWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="@string/gain_weight"
            android:padding="20dp"
            android:textSize="22sp"
            android:layout_marginTop="30dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonMaintainWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="@string/maintain_weight"
            android:padding="20dp"
            android:textSize="22sp"
            android:layout_marginTop="30dp" />

    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>